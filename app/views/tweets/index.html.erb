<p style="color: green"><%= notice %></p>

<h1>Tweets</h1>
<%= link_to "New tweet", new_tweet_path %>

<br>

<%= form_with url: tweets_path, method: :get do |form| %>
  <%= form.text_field :query_text, placeholder: 'Buscar palabra o ID', value: params[:query_text] %>
  <%= form.submit 'Buscar' %>
<% end %>

<br>

<div id="tweets">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Show this tweet", tweet %>
    </p>
  <% end %>
</div>

<br>
<br>

<%== pagy_nav(@pagy) if @tweets.any? %>